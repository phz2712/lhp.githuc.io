<!DOCTYPE html>
<html>
    <head>
        <title>Đăng nhập vào website</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="css/login.css" rel="stylesheet" type="text/css"/>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.1/css/all.min.css">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.1/umd/popper.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/js/bootstrap.min.js"></script>
    </head>
    <body>
        <div class="bg-contain">
            <div class="container">
                <div class="login-form">
                    <form action="" method="post">
                        <h3>Đăng nhập vào website</h3>
                        <script>
                            function checkuser(){
                                var checku= document.getElementById('user').value;
                                var validateuser=" ";
                                if (checku.length===0|| checku.length>=4){
                                    validateuser="<br/>"
                                }
                                else{
                                    validateuser="username must be higher than 4 letters"
                                }
                                var a = document.getElementById('checkuser').innerHTML=validateuser;
                            }
                        </script>
                        <div class="input-box">
                            <i ></i>
                            <input maxlength="10" id='user' onkeyup="checkuser()" type="text" placeholder="Nhập username">
                            <div id="checkuser"> <br/> </div>
                        </div>
                        <script>
                            function checkpass(){
                                var checkp= document.getElementById('pass').value;
                                var validatepass=" ";
                                const lower   = /^(?=.*[a-z]).{0,}$/;
                                const upper   = /^(?=.*[A-Z]).{0,}$/;
                                const number  = /^(?=.*\d).{0,}$/;
                                const special = /^(?=.*(\W|_[!@#$%^&*]_)).{0,}$/;    

                                if(checkp===""){
                                    validatepass= "</br>"
                                }
                                else
                                {if(!lower.test(checkp))
                                {
                                    validatepass=" must be a lower letter"
                                }
                                else if(!upper.test(checkp))
                                {
                                    validatepass= " must be a upper letter"  
                                }
                                else if(!number.test(checkp))
                                {
                                    validatepass= " must be a number letter"
                                }
                                else if(!special.test(checkp))
                                {
                                    validatepass= " must be a special letter"
                                }
                                else
                                {
                                    validatepass= "</br>"
                                }}
                                var a = document.getElementById('checkpass').innerHTML=validatepass;
                            }
                        </script>
                        <div class="input-box">
                            <i ></i>
                            <input id="pass" maxlength="10" onkeyup="checkpass()" type="password" placeholder="Nhập mật khẩu">
                            <div id='checkpass'> <br/> </div>
                        </div>
                        <div class="btn-box">
                            <button type="submit">
                                Đăng nhập
                            </button>
                        </div>
                    </form>
                </div>
            </div>  
        </div>
    </body>
</html>
